set $mod Mod4

# wallpaper
exec --no-startup-id xsetroot -solid "#000"

# applets / notifications
exec --no-startup-id nm-applet
exec --no-startup-id pasystray
exec --no-startup-id tail-tray
exec --no-startup-id mictray
exec --no-startup-id dunst
# exec --no-startup-id gammastep-indicator -m randr -l 52.23:21.01 -t 3000:2000

# polkit
exec --no-startup-id lxqt-policykit-agent

# vsync
exec --no-startup-id nvidia-settings -a SyncToVBlank=0

# Bobby
# set $mod Mod1
# exec --no-startup-id xrandr --output eDP --off

# HOME
exec --no-startup-id xrandr --output HDMI-0 --mode 1920x1080 --rate 144

# WLAD dell
# exec --no-startup-id xrandr --output HDMI-0 --mode 2560x1440 --rate 120

# Caps as ctrl
exec --no-startup-id setxkbmap -option caps:ctrl_modifier

# Global maccel for all devices
exec_always for id in $(xinput list | grep "pointer" | cut -d '=' -f 2 | cut -f 1); do xinput --set-prop $id 'libinput Accel Profile Enabled' 0, 1; done
# disable fast drag lag
exec_always for id in $(xinput list | grep "pointer" | cut -d '=' -f 2 | cut -f 1); do xinput --set-prop $id 'libinput Middle Emulation Enabled' 0; done

# No drag
tiling_drag off

bindsym $mod+n exec i3-input -F 'mark %s' -l 1 -P 'Mark: '
bindsym $mod+g exec i3-input -F '[con_mark="%s"] focus' -l 1 -P 'Goto: '

# Sleep screen
exec --no-startup-id xset s 600 # 5min screenlock
exec --no-startup-id xss-lock -l -- i3lock -c 202020
exec --no-startup-id xautolock -time 10 -locker "systemctl suspend" -detectsleep # 10m sleep

# lock
bindsym $mod+Shift+y exec --no-startup-id i3lock -c 202020

# Disable titlebars
for_window [class="^.*"] border pixel 1
font pango:monospace 9

# Clipboard Screenshots
bindsym $mod+y exec --no-startup-id maim | tee ~/Pictures/screenshot_$(date +%Y%m%d_%H%M%S).png | xclip -selection clipboard -t image/png
bindsym $mod+u exec --no-startup-id maim --select | tee ~/Pictures/screenshot_$(date +%Y%m%d_%H%M%S).png | xclip -selection clipboard -t image/png

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod
tiling_drag modifier titlebar

# workspace bound windows
assign [class="zen"] 1
assign [class="vlc"] 2
assign [class="obsidian"] 2
assign [class="ghostty"] 3
assign [class="Code"] 4
assign [class="nvim"] 4
for_window [urgent=latest] focus

# make floating windows follow workspaces
# for_window [class="^.*" floating] sticky enable

# Toggle sticky on floating windows only
bindsym $mod+s exec --no-startup-id "i3-msg '[con_id=__focused__ floating] sticky toggle'"

# startup workspaces on login
exec --no-startup-id app.zen_browser.zen
exec --no-startup-id ghostty
exec --no-startup-id vlc

# aerospace-like
bindsym $mod+Return exec ghostty
bindsym $mod+q kill
bindsym $mod+d exec dmenu_run
bindsym $mod+t exec thunar

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# bindsym $mod+z split h
# bindsym $mod+x split v

bindsym $mod+f fullscreen toggle
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

bindsym $mod+space floating toggle

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

bindsym $mod+Shift+1 move container to workspace $ws1; workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2; workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3; workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4; workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5; workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6; workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7; workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8; workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9; workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10; workspace $ws10

bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"
bindsym $mod+Shift+s exec "i3-nagbar -t warning -m 'You pressed the suspend shortcut. Do you really want to suspend your PC?' -B 'Yes, suspend' 'killall i3-nagbar && systemctl suspend'"

# music
bindsym $mod+bracketleft exec playerctl previous
bindsym $mod+bracketright exec playerctl next
bindsym $mod+p exec playerctl play-pause
bindsym $mod+m exec i3-volume mute -n
bindsym $mod+minus exec i3-volume down 5 -n
bindsym $mod+equal exec i3-volume up 5 -n
bindsym --whole-window $mod+button9 exec playerctl next
bindsym --whole-window $mod+button8 exec playerctl previous

mode "resize" {
  bindsym h resize shrink width 10 px or 10 ppt
  bindsym j resize grow height 10 px or 10 ppt
  bindsym k resize shrink height 10 px or 10 ppt
  bindsym l resize grow width 10 px or 10 ppt

  bindsym a resize shrink width 10 px or 10 ppt
  bindsym w resize grow height 10 px or 10 ppt
  bindsym s resize shrink height 10 px or 10 ppt
  bindsym d resize grow width 10 px or 10 ppt

  bindsym Left resize shrink width 10 px or 10 ppt
  bindsym Down resize grow height 10 px or 10 ppt
  bindsym Up resize shrink height 10 px or 10 ppt
  bindsym Right resize grow width 10 px or 10 ppt

  bindsym Return mode "default"
  bindsym Escape mode "default"
  bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

bar {
  position top
  status_command i3status
}
