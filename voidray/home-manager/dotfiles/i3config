set $mod Mod4

# wallpaper
exec --no-startup-id xsetroot -solid "#000"

# wifi applet
exec --no-startup-id nm-applet

# Bobby
# set $mod Mod1
# exec --no-startup-id xrandr --output eDP --off

# WLAD dell
exec --no-startup-id xrandr --output HDMI-0 --mode 2560x1440 --rate 120

# Caps as ctrl
exec --no-startup-id setxkbmap -option caps:ctrl_modifier

# Global maccel for all devices
exec_always for id in $(xinput list | grep "pointer" | cut -d '=' -f 2 | cut -f 1); do xinput --set-prop $id 'libinput Accel Profile Enabled' 0, 1; done

# Disable titlebars
for_window [class="^.*"] border pixel 1
font pango:DejaVu Sans Mono 12

# Sleep screen
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock -c 161618 --nofork

# Clipboard Screenshots
bindsym $mod+y exec --no-startup-id maim | tee ~/Pictures/screenshot_$(date +%Y%m%d_%H%M%S).png | xclip -selection clipboard -t image/png
bindsym $mod+u exec --no-startup-id maim --select | tee ~/Pictures/screenshot_$(date +%Y%m%d_%H%M%S).png | xclip -selection clipboard -t image/png

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# workspace bound windows
assign [class="zen"] 1
assign [class="obsidian"] 2
assign [class="kitty"] 3
assign [class="Code"] 4
assign [class="Zed"] 4
assign [class="nvim"] 4
for_window [urgent=latest] focus

# startup workspaces on login
exec --no-startup-id zen
exec --no-startup-id kitty

# aerospace-like
bindsym $mod+Return exec i3-sensible-terminal
bindsym $mod+q kill
bindsym $mod+d exec dmenu_run
bindsym $mod+t exec thunar
bindsym Ctrl+space exec dmenu_run

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# bindsym $mod+z split h
# bindsym $mod+x split v

bindsym $mod+f fullscreen toggle
bindsym $mod+w layout tabbed
bindsym $mod+e layout default

bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

bindsym $mod+Shift+1 move container to workspace $ws1; workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2; workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3; workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4; workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5; workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6; workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7; workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8; workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9; workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10; workspace $ws10

bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"
bindsym $mod+Shift+s exec "i3-nagbar -t warning -m 'You pressed the suspend shortcut. Do you really want to suspend your PC?' -B 'Yes, suspend' 'killall i3-nagbar && systemctl suspend'"

# music
bindsym $mod+minus exec playerctl previous
bindsym $mod+equal exec playerctl next
bindsym $mod+p exec playerctl play-pause

mode "resize" {
  bindsym j resize shrink width 10 px or 10 ppt
  bindsym k resize grow height 10 px or 10 ppt
  bindsym l resize shrink height 10 px or 10 ppt
  bindsym semicolon resize grow width 10 px or 10 ppt

  bindsym Left resize shrink width 10 px or 10 ppt
  bindsym Down resize grow height 10 px or 10 ppt
  bindsym Up resize shrink height 10 px or 10 ppt
  bindsym Right resize grow width 10 px or 10 ppt

  bindsym Return mode "default"
  bindsym Escape mode "default"
  bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

bar {
  position top
  status_command py3status -c ~/.config/i3status/config
  # OLD
  # status_command i3status
}
