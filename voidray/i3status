  format = '[\?color=state&show DND]'
}

clock {
  format_time = "%a %d.%m.%Y ~ %H:%M"
}

nvidia_smi {
  format_gpu = "g [\?color=temperature.gpu {temperature.gpu}Â°C] [\?color=memory.used_percent {memory.used_percent}%]"
}

