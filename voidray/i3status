  cpus = ['cpu']
  format = "c [\?color=cpu_temp {cpu_temp}Â°{cpu_temp_unit}] [\?color=cpu_used_percent {format_cpu}] r {mem_used}/{mem_total}"
  format_cpu = "{used_percent}%"
}

