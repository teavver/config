[user]
    email = jerzyx11@gmail.com
    name = teavver

[core]
    excludesfile = ~/.gitignore_global
    preloadindex = true
    editor = vim

[color]
    ui = auto

[color.grep]
    filename = bold green
    match = black yellow

[diff]
	# Tells Git to detect renames. If set to "true", it will enable basic
	# rename detection. If set to "copies", it will detect copies, as well.
    renames = copies

[push]
    default = current

[advice]
    detachedHead = false

[alias]
    st = status
    co = checkout
    br = branch
    bra = branch -vv -a
    ci = commit
    cm = commit -m
    last = log -1 HEAD
    his = log --graph
    h = log --oneline

    checkout = checkout -B
    go = checkout -B

    # Delete all local branches except 'master / main'.
    prunelocal = "!git branch --merged | grep -v '\\*' | grep -v 'master' | grep -v 'main' | xargs -r git branch -d"
