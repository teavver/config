{
  "terminal.integrated.fontSize": 14,
  "security.workspace.trust.untrustedFiles": "open",
  "explorer.confirmDelete": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "editor.scrollBeyondLastLine": false,
  "[python]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },
  // save
  "vim.commandLineModeKeyBindingsNonRecursive": [
    {
      "before": [
        "W",
        "<Enter>"
      ],
      "after": [
        "w",
        "<Enter>"
      ],
      "silent": true
    },
    {
      "before": [
        "Q",
        "<Enter>"
      ],
      "after": [
        "q",
        "<Enter>"
      ],
      "silent": true
    },
    {
      "before": [
        "Q",
        "!",
        "<Enter>"
      ],
      "after": [
        "q",
        "!",
        "<Enter>"
      ],
      "silent": true
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    // diag
    {
      "before": [
        "]",
        "d"
      ],
      "commands": [
        "editor.action.marker.nextInFiles"
      ],
      "silent": true
    },
    {
      "before": [
        "[",
        "d"
      ],
      "commands": [
        "editor.action.marker.prevInFiles"
      ],
      "silent": true
    },
    // WIP
    {
      "before": ["1", "1"],
      "after": ["<Esc>"],
      "commands": [
        {
          "command": "extension.setActiveControlGroup",
          "args": { "id": 1 }
        }
      ]
    }
  ],
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1
  },
  "editor.stopRenderingLineAfter": 500,
  "git.confirmSync": false,
  "explorer.confirmDragAndDrop": false,
  "vim.vimrc.path": "$HOME/.vimrc",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "workbench.tree.indent": 16,
  "go.toolsManagement.autoUpdate": true,
  "workbench.settings.applyToAllProfiles": [
    "editor.tabSize"
  ],
  "redhat.telemetry.enabled": false,
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "vim.useSystemClipboard": true,
  "files.associations": {
    "TODO": "markdown"
  },
  "terminal.integrated.fontFamily": "Droid Sans Mono, Consolas, monospace",
  "explorer.confirmPasteNative": false,
  "git.ignoreMissingGitWarning": true,
  "git.autofetch": true,
  "git.ignoreRebaseWarning": true,
  "application.shellEnvironmentResolutionTimeout": 1,
  "diffEditor.ignoreTrimWhitespace": false,
  "[typescriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features",
    "editor.tabSize": 2
  },
  "editor.minimap.enabled": false,
  "[css]": {
    "editor.defaultFormatter": "vscode.css-language-features"
  },
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features",
    "editor.tabSize": 2
  },
  "settingsSync.ignoredExtensions": [
    "wolfieshorizon.python-auto-venv"
  ],
  "vim.vimrc.enable": true,
  "python.REPL.enableREPLSmartSend": false,
  "interactiveWindow.executeWithShiftEnter": false,
  "workbench.editor.enablePreview": false,
  "[markdown]": {
    "diffEditor.ignoreTrimWhitespace": true
  },
  "terminal.integrated.gpuAcceleration": "off",
  "window.menuBarVisibility": "compact",
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "github.copilot.advanced": {
    "authProvider": "github"
  },
  "editor.tabSize": 2,
  "vim.sneak": true,
  "vim.sneakReplacesF": true,
  "vim.targets.enable": true,
  "makefile.configureOnOpen": true,
  "lldb.library": "/Library/Developer/CommandLineTools/Library/PrivateFrameworks/LLDB.framework/Versions/A/LLDB",
  "lldb.launch.expressions": "native",
  "cmake.showOptionsMovedNotification": false,
  "debug.onTaskErrors": "debugAnyway",
  "editor.fontSize": 15,
  "editor.mouseWheelScrollSensitivity": 0.75,
  "editor.renderWhitespace": "all"
}